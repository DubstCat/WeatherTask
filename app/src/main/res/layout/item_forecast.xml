<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="forecastItem"
            type="com.example.weathertask.utils.forecast.ForecastItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/ivForecastWeather"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/weather_sunny" />

        <TextView
            android:id="@+id/tvForecastTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="@{forecastItem.timestamp}"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/ivForecastWeather"
            app:layout_constraintTop_toTopOf="@+id/ivForecastWeather" />

        <TextView
            android:id="@+id/tvForecastWeather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="4dp"
            android:text="@{forecastItem.weather}"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/ivForecastWeather"
            app:layout_constraintTop_toBottomOf="@+id/tvForecastTime" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@{forecastItem.temp}"
            android:textColor="@color/design_default_color_primary"
            android:textSize="32sp"
            app:layout_constraintBottom_toBottomOf="@+id/ivForecastWeather"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ivForecastWeather" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>